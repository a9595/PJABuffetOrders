<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tieorange.com.pjabuffetorders.activities.ProductActivity"
    tools:showIn="@layout/activity_product">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tvName"
      app:layout_constraintBaseline_toBaselineOf="@+id/name"
      android:layout_marginStart="16dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:text="Name:"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tvPrice"
      app:layout_constraintBaseline_toBaselineOf="@+id/price"
      android:layout_marginStart="16dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:text="Price:"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tvTime"
      app:layout_constraintBaseline_toBaselineOf="@+id/time"
      android:layout_marginStart="16dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:text="Time (min):"/>
  <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:text="Name"
      android:ems="10"
      android:id="@+id/name"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="@dimen/productEditextLeftMargin"
      app:layout_constraintLeft_toLeftOf="parent"
      android:maxLines="3"/>
  <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="numberSigned"
      android:ems="10"
      android:id="@+id/price"
      android:text="3.45"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/name"
      android:layout_marginStart="@dimen/productEditextLeftMargin"
      app:layout_constraintLeft_toLeftOf="parent"/>
  <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="number"
      android:ems="10"
      android:id="@+id/time"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@+id/price"
      android:layout_marginStart="@dimen/productEditextLeftMargin"
      app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
